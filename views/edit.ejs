<%- include('partials/header') %>

<div class="card">
    <h2>Edit Club: <%= club.name %></h2>
    
    <form action="/clubs/<%= club.id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="name">Club Name *</label>
            <input type="text" id="name" name="name" value="<%= club.name %>" required>
        </div>
        
        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" placeholder="Brief description of the club..."><%= club.description || '' %></textarea>
        </div>
        
        <div class="form-group">
            <label for="category">Category *</label>
            <select id="category" name="category" required>
                <option value="">Select a category</option>
                <option value="Sports" <%= club.category === 'Sports' ? 'selected' : '' %>>Sports</option>
                <option value="Arts" <%= club.category === 'Arts' ? 'selected' : '' %>>Arts</option>
                <option value="Technology" <%= club.category === 'Technology' ? 'selected' : '' %>>Technology</option>
                <option value="Academic" <%= club.category === 'Academic' ? 'selected' : '' %>>Academic</option>
                <option value="Social" <%= club.category === 'Social' ? 'selected' : '' %>>Social</option>
                <option value="Other" <%= club.category === 'Other' ? 'selected' : '' %>>Other</option>
            </select>
        </div>
        
        <div class="form-group">
            <label for="president">President Name *</label>
            <input type="text" id="president" name="president" value="<%= club.president %>" required>
        </div>
        
        <div class="form-group">
            <label for="email">Contact Email *</label>
            <input type="email" id="email" name="email" value="<%= club.email %>" required>
        </div>
        
        <div class="form-group">
            <label for="members_count">Number of Members</label>
            <input type="number" id="members_count" name="members_count" min="0" value="<%= club.members_count %>">
        </div>
        
        <div class="form-group">
            <button type="submit" class="btn btn-success">Update Club</button>
            <a href="/clubs/<%= club.id %>" class="btn btn-primary">Cancel</a>
        </div>
    </form>
</div>

<%- include('partials/footer') %>