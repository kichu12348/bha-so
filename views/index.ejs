<%- include('partials/header') %>

<div class="card">
    <h2>College Clubs Directory</h2>
    <p>Manage and explore all college clubs in one place.</p>
    <a href="/clubs/new" class="btn btn-success">Add New Club</a>
</div>

<% if (clubs.length === 0) { %>
    <div class="card">
        <h3>No clubs found</h3>
        <p>Be the first to add a club!</p>
        <a href="/clubs/new" class="btn btn-primary">Add First Club</a>
    </div>
<% } else { %>
    <div class="club-grid">
        <% clubs.forEach(club => { %>
            <div class="club-card">
                <h3><%= club.name %></h3>
                <p><%= club.description %></p>
                
                <div class="club-info">
                    <span class="badge badge-<%= club.category.toLowerCase() %>"><%= club.category %></span>
                </div>
                
                <div class="club-info">
                    <strong>President:</strong> <%= club.president %>
                </div>
                
                <div class="club-info">
                    <strong>Members:</strong> <%= club.members_count %>
                </div>
                
                <div class="club-info">
                    <strong>Contact:</strong> <%= club.email %>
                </div>
                
                <div class="actions">
                    <a href="/clubs/<%= club.id %>" class="btn btn-primary">View Details</a>
                    <a href="/clubs/<%= club.id %>/edit" class="btn btn-warning">Edit</a>
                    <form style="display: inline-block;" action="/clubs/<%= club.id %>?_method=DELETE" method="POST" 
                          onsubmit="return confirm('Are you sure you want to delete this club?')">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>
<% } %>

<%- include('partials/footer') %>