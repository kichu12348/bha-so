<%- include('partials/header') %>

<div class="card">
    <h2><%= club.name %></h2>
    
    <div class="club-info">
        <span class="badge badge-<%= club.category.toLowerCase() %>"><%= club.category %></span>
    </div>
    
    <div class="club-info">
        <strong>Description:</strong><br>
        <%= club.description || 'No description available' %>
    </div>
    
    <div class="club-info">
        <strong>President:</strong> <%= club.president %>
    </div>
    
    <div class="club-info">
        <strong>Contact Email:</strong> 
        <a href="mailto:<%= club.email %>"><%= club.email %></a>
    </div>
    
    <div class="club-info">
        <strong>Number of Members:</strong> <%= club.members_count %>
    </div>
    
    <div class="club-info">
        <strong>Created:</strong> <%= new Date(club.created_at).toLocaleDateString() %>
    </div>
    
    <div class="actions" style="margin-top: 20px;">
        <a href="/clubs/<%= club.id %>/edit" class="btn btn-warning">Edit Club</a>
        <a href="/" class="btn btn-primary">Back to All Clubs</a>
        <form style="display: inline-block;" action="/clubs/<%= club.id %>?_method=DELETE" method="POST" 
              onsubmit="return confirm('Are you sure you want to delete this club?')">
            <button type="submit" class="btn btn-danger">Delete Club</button>
        </form>
    </div>
</div>

<%- include('partials/footer') %>